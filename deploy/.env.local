# Dimensio Local Development Environment Variables

# Environment Type
ENV=local

# Server Configuration
SERVER_IP=localhost
SERVER_NAME=localhost
PROJECT_DIR=.

# Application Configuration
FLASK_APP=api/server.py
FLASK_ENV=development
PYTHONUNBUFFERED=1

# Port Configuration (避免与本地其他服务冲突)
BACKEND_PORT=5001
FRONTEND_PORT=3001
NGINX_PORT=8080

# Docker Configuration
COMPOSE_PROJECT_NAME=dimensio-local

# Python Version
PYTHON_VERSION=3.9

# Logging
LOG_LEVEL=DEBUG

# Docker Registry Mirror (本地开发不需要镜像加速)
USE_DOCKER_MIRROR=false

# Hot Reload (本地开发启用热重载)
ENABLE_HOT_RELOAD=true
