# Dimensio Production Environment Variables

# Environment Type
ENV=production

# Server Configuration
# ⚠️ 修改为你的服务器 IP 或域名
SERVER_IP=8.140.237.35
SERVER_NAME=8.140.237.35
PROJECT_DIR=/root/dimensio

# Application Configuration
FLASK_APP=api/server.py
FLASK_ENV=production
PYTHONUNBUFFERED=1

# Port Configuration (生产环境使用标准端口)
BACKEND_PORT=5000
FRONTEND_PORT=3000
NGINX_PORT=80

# Docker Configuration
COMPOSE_PROJECT_NAME=dimensio

# Python Version
PYTHON_VERSION=3.9

# Logging
LOG_LEVEL=INFO

# Docker Registry Mirror (生产环境启用中国镜像加速)
USE_DOCKER_MIRROR=true

# Hot Reload (生产环境禁用热重载)
ENABLE_HOT_RELOAD=false
